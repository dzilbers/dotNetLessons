<Window x:Class="Lesson6WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson6WPF"
        mc:Ignorable="d"
        Title="Best Window" Height="200" Width="477">
    <Window.Resources>
        <LinearGradientBrush x:Key="myLinearGradientBrush">
            <GradientStop Color="Blue" Offset="0" />
            <GradientStop Color="Yellow" Offset="0.5" />
            <GradientStop Color="Red" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="142*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnDone" Content="Done" HorizontalAlignment="Left" Margin="78,62,0,0" VerticalAlignment="Top" Height="25" Click="btnDone_Click" MouseMove="btnMy_MouseMove"
                IsEnabled="{Binding ElementName=chkApproved, Path=IsChecked}"/>
        <CheckBox x:Name="chkApproved" Content="Approved" HorizontalAlignment="Left" Margin="202,32,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <StackPanel HorizontalAlignment="Left" Margin="165,49,0,0" VerticalAlignment="Top" Height="25" Width="232" Orientation="Horizontal" Grid.ColumnSpan="4">
            <Label Content="Gender:" />
            <RadioButton Content="Male"  GroupName="Gender" Height="14"/>
            <RadioButton Content="Female"  GroupName="Gender" Height="14"/>
        </StackPanel>
        <TextBox x:Name="boxText" HorizontalAlignment="Left" Margin="177,99,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="31" Grid.ColumnSpan="2"
                 Background="{StaticResource myLinearGradientBrush}"/>
        <TextBlock x:Name="blkText" HorizontalAlignment="Left" Margin="177,135,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <ListBox Margin="21,50,24,24" Background="{StaticResource myLinearGradientBrush}" Grid.Column="2" Grid.ColumnSpan="2">
            <ListBox.Items>
                <ListBoxItem>Item 1</ListBoxItem>
                <ListBoxItem>Item 2</ListBoxItem>
                <ListBoxItem>Item 3</ListBoxItem>
            </ListBox.Items>
        </ListBox>
        <ComboBox HorizontalAlignment="Left" Margin="33,114,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.Items>
                <ComboBoxItem>Combo 1</ComboBoxItem>
                <ComboBoxItem>Combo 2</ComboBoxItem>
                <ComboBoxItem>Combo 3</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
    </Grid>
</Window>
